{
  "extends": "tslint-config-airbnb",
  "rules": {
    "indent": [true, "tabs"],
    "ter-indent": [true, "tab"],
    "strict-boolean-expressions": false,
    "import-name": false,
    "max-line-length": false,
    "align": [false],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
   ],
   "trailing-comma": [true, {
    "singleline": "never",
    "multiline": {
      "objects": "never",
      "arrays": "always",
      "functions": "never",
      "typeLiterals": "ignore"
    }
  }]
  }
}